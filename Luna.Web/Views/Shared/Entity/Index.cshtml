@model IEnumerable<Luna.Commons.Models.ModelBase>

<a asp-action="Add" class="btn btn-success mb-2">Ajouter un nouvel élément</a>
<table class="table table-striped table-bordered">
    <tr>
        <th>Nom</th>
        <th>Description</th>
        <th></th>
    </tr>
    @if (Model?.Any() == true)
    {
        foreach (var entity in Model)
        {
            <tr>
                <td>@entity.Name</td>
                <td>@entity.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@entity.Id" class="btn btn-success"><i class="fa fa-pencil"></i></a>
                    <a asp-action="Delete" asp-route-id="@entity.Id" class="btn btn-success"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3" class="text-center">
                <i>Aucun élément à charger</i>
            </td>
        </tr>
    }
</table>