@model IEnumerable<Luna.Commons.Models.Dtos.CharacterDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Nom</th>
            <th>Type de personnage</th>
            <th></th>
        </tr>
        @foreach (var character in Model)
        {
            <tr>
                <td>@character.Name</td>
                <td>@character.Type?.Name</td>
                <td>
                    <a asp-controller="Character" asp-action="Edit" asp-route-id="@character.Id" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        }
    </table>
</div>