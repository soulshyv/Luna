@model IEnumerable<Luna.Commons.Models.Dtos.CharacterDto>

@{
    ViewData["Title"] = "Personnages";
}

<h1 class="text-center display-4">@ViewData["Title"]</h1>

<div class="row mb-2">
    <div class="col-md-12">
        <a asp-controller="Character" asp-action="Create" class="btn btn-success">Cr√©er un personnage</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-sm text-center">
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Race</th>
                <th></th>
            </tr>
            @foreach (var character in Model)
            {
                <tr>
                    <td>@character.Name</td>
                    <td>@character.Type?.Name</td>
                    <td>@character.Race?.Name</td>
                    <td>
                        <a asp-controller="Character" asp-action="Edit" asp-route-id="@character.Id" class="btn btn-primary btn-sm">Modifier</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

